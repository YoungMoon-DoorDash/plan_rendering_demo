{{> header}}
{{> bodyheader}}

{{{banner}}}

<p style='margin-top:10px;font-weight:bold;'>{{title}}</p>

{{#experiment}}
    <form style="width:640px;margin-top:10px;" class="text-start" action="/experiment/edit" method="post">
        <input type='hidden' name='id' value='{{id}}' />
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required value="{{name}}" />
        </div>
        <div class="form-group">
            <label for="controls">Controls:</label>
            <input type="text" class="form-control" id="controls" name="controls" required value="{{controls}}" />
        </div>

        <br>
        <center>
            <input type="submit" class='btn btn-outline-primary btn-sm' value="Update">
            <a type="button" class='btn btn-outline-primary btn-sm' href="/experiment">Cancel</a>
        </center>
    </form>
{{/experiment}}

<script>
    document.getElementById('name').focus()
</script>
