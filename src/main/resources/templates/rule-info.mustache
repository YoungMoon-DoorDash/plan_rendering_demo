{{> header}}
<script>
    function on_delete(id) {
        if (confirm("Are you want to remove this text!")) {
            location.href = "/rule/delete?id=" + id
        }
    }
</script>
{{> bodyheader}}

{{{banner}}}

<table style='margin-top:10px; width:860px;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <a href='/rule/add' class='btn btn-outline-primary btn-sm'>Add rule</a>
            {{#rule}}
                <a href='/rule/edit?id={{id}}' class='btn btn-outline-primary btn-sm'>Edit</a>
                <button type="button" class='btn btn-outline-primary btn-sm' onclick="on_delete({{id}})">Remove</button>
                <a href='/rule/simulate?id={{id}}' class='btn btn-outline-primary btn-sm'>Simulate</a>
            {{/rule}}
        </td>
    </tr>
</table>

{{#rule}}
    <table class="table table-striped table-bordered btn-sm">
        <tr><td scope="row" style="text-align:right;font-weight:bold;" nowrap>Name &nbsp;</td><td nowrap>&nbsp; {{name}}</td></tr>
        <tr><td scope="row" style="text-align:right;font-weight:bold;" nowrap>Type &nbsp;</td><td nowrap>&nbsp; {{type}}</td></tr>
        <tr><td scope="row" style="text-align:right;font-weight:bold;" nowrap>Run &nbsp;</td><td><pre>{{run}}</pre></td></tr>
    </table>
{{/rule}}

{{> footer}}