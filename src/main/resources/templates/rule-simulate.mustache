{{> header}}
{{> bodyheader}}
{{{banner}}}

<form style="width:100%;margin-top:10px;" class="text-start" action="/rule/simulate" method="post">
<table style='margin-top:10px; width:100%;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <input type="submit" class='btn btn-outline-primary btn-sm' value="Execute">
        </td>
    </tr>
</table>

{{#rule}}
    <input type='hidden' name='id' value='{{id}}' />
    <table class="table table-striped table-bordered btn-sm" style="width:100%;">
        <tr><td style="text-align:right;font-weight:bold;" nowrap>Name &nbsp;</td><td nowrap>&nbsp; {{name}}</td></tr>
        <tr><td style="text-align:right;font-weight:bold;" nowrap>Type &nbsp;</td><td nowrap>&nbsp; {{type}}</td></tr>
        <tr><td style="text-align:right;font-weight:bold;" nowrap>Run &nbsp;</td><td><pre>{{run}}</pre></td></tr>
    </table>
{{/rule}}

    <div class="form-group">
        <label for="parameters">Parameters:</label>
        <textarea class="form-control" id="parameters" name="parameters"
                  rows="16"
                  style="font-size:small;width:100%;"
                  placeholder="provide name-value paired input as json format"
                  required>{{parameters}}</textarea>
    </div>

{{#result}}
    <div class="form-group">
        <label for="result">Result:</label><br/>
        <textarea id="result" name="result" rows="32" style="font-size:small;width:100%;background-color:#EEEEEE;" readonly>{{result}}</textarea>
    </div>
{{/result}}
</form>

<script>
    document.getElementById('parameters').focus()
</script>
{{> footer}}