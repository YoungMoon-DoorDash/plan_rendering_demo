{{> header}}
<script>
    function on_delete(id) {
        if (confirm("Are you want to remove this text!")) {
            location.href = "/text/delete?id=" + id
        }
    }
</script>
{{> bodyheader}}
{{{banner}}}

<table style='margin-top:10px; width:100%;'>
    <tr>
        <td><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <a href='/text/add' class='btn btn-outline-primary btn-sm'>Add text</a>
            {{#text}}
                <a href='/text/edit?id={{id}}' class='btn btn-outline-primary btn-sm'>Edit</a>
                <button type="button" class='btn btn-outline-primary btn-sm' onclick="on_delete({{id}})">Remove</button>
            {{/text}}
        </td>
    </tr>
</table>

{{#text}}
<table class="table table-striped table-bordered btn-sm">
    <tr><td scope="row" style="width:120px;text-align:right;font-weight:bold;" nowrap>ID &nbsp;</td><td>&nbsp; {{id}}</td></tr>
    <tr><td scope="row" style="width:120px;text-align:right;font-weight:bold;" nowrap>Name &nbsp;</td><td>&nbsp; {{name}}</td></tr>
    <tr><td scope="row" style="width:120px;text-align:right;font-weight:bold;" nowrap>Value &nbsp;</td><td>{{{value}}}</td></tr>
</table>
{{/text}}

{{> footer}}