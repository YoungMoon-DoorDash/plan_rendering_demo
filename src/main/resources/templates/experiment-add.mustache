{{> bodyheader}}

{{{banner}}}

<p style='margin-top:10px;font-weight:bold;'>{{title}}</p>

<form style="width:860px;margin-top:10px;" class="text-start" action="/experiment/add" method="post">

    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <div class="form-group">
        <label for="controls">Controls:</label>
        <input type="text" class="form-control" id="controls" name="controls" value="control,treatment" required />
    </div>

    <br>
    <center>
        <input type="submit" class='btn btn-outline-primary btn-sm' value="Submit">
        <a type="button" class='btn btn-outline-primary btn-sm' href="/experiment">Cancel</a>
    </center>
</form>

<script>
    document.getElementById('name').focus()
</script>

