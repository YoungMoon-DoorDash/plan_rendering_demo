{{> header}}
<script>
    function on_delete(id) {
        if (confirm("Are you want to remove this screen!")) {
            location.href = "/screen/delete?id=" + id
        }
    }
</script>
{{> bodyheader}}

{{{banner}}}

<table style='margin-top:10px; width:860px;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <a href='/screen/add' class='btn btn-outline-primary btn-sm'>Add screen</a>
            {{#screen}}
                <a href='/screen/edit?id={{id}}' class='btn btn-outline-primary btn-sm'>Edit</a>
                <button type="button" class='btn btn-outline-primary btn-sm' onclick="on_delete({{id}})">Remove</button>
                <a href='/screen/simulate?id={{id}}' class='btn btn-outline-primary btn-sm'>Simulate</a>
            {{/screen}}
        </td>
    </tr>
</table>

{{#screen}}
    <table class="table table-striped table-bordered btn-sm">
        <tr><td scope="row" style="text-align:right;font-weight:bold;" nowrap>Name &nbsp;</td><td nowrap>&nbsp; {{name}}</td></tr>
        <tr><td scope="row" style="text-align:right;font-weight:bold;" nowrap>Elements &nbsp;</td><td><pre>{{elements}}</pre></td></tr>
    </table>
{{/screen}}

{{> footer}}