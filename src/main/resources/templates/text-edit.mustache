{{> header}}
{{> bodyheader}}
{{{banner}}}

{{#text}}
<form style="width:100%;margin-top:10px;" class="text-start" action="/text/edit" method="post">
    <table style='margin-top:10px; width:100%;'>
        <tr>
            <td><b>{{title}}</b></td>
            <td style='padding-left:16px;text-align:right;' nowrap>
                <input type="submit" class='btn btn-outline-primary btn-sm' value="Update">
                <a type="button" class='btn btn-outline-primary btn-sm' href="/text">Cancel</a>
            </td>
        </tr>
    </table>

    <input type='hidden' name='id' value='{{id}}' />
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required value="{{name}}" />
    </div>
    <div class="form-group">
        <label for="value">Text:</label>
        <textarea class="form-control" id="value" name="value" rows="5"
                  style="width:100%; font-size:small;" required
        >{{value}}</textarea>
    </div>
</form>
{{/text}}

<script>
    document.getElementById('name').focus()
</script>
{{> footer}}