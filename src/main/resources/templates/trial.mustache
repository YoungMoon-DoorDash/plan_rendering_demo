{{> header}}
{{> bodyheader}}
{{{banner}}}

<table style='margin-top:10px;width:860px;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <a href='/plan/trial/import' class='btn btn-outline-primary btn-sm'>Import</a>
        </td>
    </tr>
</table>

<table class="table table-striped table-bordered btn-sm">
    <thead>
    <tr>
        <th scope="col">Trial ID</th>
        <th scope="col">Created At</th>
        <th scope="col">Updated At</th>
        <th scope="col">Active</th>
        <th scope="col">Interval Type</th>
        <th scope="col">Interval Units</th>
        <th scope="col">Payment Provider</th>
        <th scope="col">Plan ID</th>
    </tr>
    </thead>
    <tbody>
    {{#trials}}
        <tr>
            <td scope="row" nowrap>{{id}}</td>
            <td nowrap>{{created_at}}</td>
            <td nowrap>{{updated_at}}</td>
            <td>{{is_active}}</td>
            <td>{{interval_type}}</td>
            <td>{{interval_units}}</td>
            <td>{{payment_provider_type}}</td>
            <td><a href='/plan/info?id={{consumer_subscription_plan_id}}' style='width:100%;' class="btn btn-outline-primary btn-sm">{{consumer_subscription_plan_id}}</a></td>
        </tr>
    {{/trials}}
    {{^trials}}
        <tr><td colspan=8 style='text-align:center;'>There's no registered trials.</td></tr>
    {{/trials}}
    </tbody>
</table>

{{> footer}}