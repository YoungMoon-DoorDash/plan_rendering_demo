{{> header}}
<script language='javascript' type='text/javascript'>
    function on_search() {
        let query = document.getElementById('search').value
        location.href = '/screen?search=' + query
    }
</script>
{{> bodyheader}}
{{{banner}}}

<table style='margin-top:10px;width:100%;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <input type='text' id='search' value="{{search}}" size='32' placeholder='Search by name'/>
            <button type='button' class='btn btn-outline-primary btn-sm' onclick='on_search()'>Find</button>
            <a href='/screen/add' class='btn btn-outline-primary btn-sm'>Add screen</a>
        </td>
    </tr>
</table>

<table class="table table-striped table-bordered" style="width:100%;">
    <tbody>
    {{#screens}}
        <tr><td><a href='/screen/info?id={{id}}' class="btn-sm">{{name}}</a></td></tr>
    {{/screens}}
    {{^screens}}
        <tr><td style='text-align:center;'>There's no registered screens.</td></tr>
    {{/screens}}
    </tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode == 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}