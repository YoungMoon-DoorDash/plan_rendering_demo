{{> header}}
<script>
    function on_search() {
        location.href = '/rule?search=' + document.getElementById('search').value
    }
</script>
{{> bodyheader}}
{{{banner}}}
{{{html-title-line}}}

<table class="table table-striped table-bordered" style="width:100%;">
    <tbody>
{{#rules}}
    <tr><td><a href='/rule/info?id={{id}}' class="btn-sm">{{name}}</a>
        <pre style="font-size:small;padding-left:10px;">{{run}}</pre>
    </td></tr>
{{/rules}}
    </tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode === 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}