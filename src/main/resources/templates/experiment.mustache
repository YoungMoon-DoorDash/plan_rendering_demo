{{> header}}
<script>
    function on_search() {
        location.href = '/experiment?search=' + document.getElementById('search').value
    }
</script>
{{> bodyheader}}
{{{banner}}}
{{{html-title-line}}}

{{#experiments}}
<table class="table table-striped table-bordered" style="width:100%;">
    <thead>
    <tr><th scope="col">ID</th><th scope="col">Name</th><th scope="col">Controls</th></tr>
    </thead>
    <tbody>
        <tr>
            <td scope="row">{{id}}</td>
            <td><a href='/experiment/info?id={{id}}' class='btn btn-outline-primary btn-sm'>{{name}}</a> &nbsp;</td>
            <td>{{{controls}}}</td>
        </tr>
    </tbody>
</table>
{{/experiments}}

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode === 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}