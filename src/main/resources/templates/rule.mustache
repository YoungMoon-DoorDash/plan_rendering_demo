{{> header}}
<script language='javascript' type='text/javascript'>
    function on_search() {
        let query = document.getElementById('search').value
        location.href = '/rule?search=' + query
    }
</script>
{{> bodyheader}}
{{{banner}}}

<table style='margin-top:10px;width:860px;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <input type='text' id='search' value="{{search}}" size='70' placeholder='Search by name'/>
            <button type='button' class='btn btn-outline-primary btn-sm' onclick='on_search()'>Find</button>
            <a href='/rule/add' class='btn btn-outline-primary btn-sm'>Add rule</a>
            <a href='/rule/import' class='btn btn-outline-primary btn-sm'>Import</a>
        </td>
    </tr>
</table>

<table class="table table-striped table-bordered" style="width:860px;">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Run</th>
    </tr>
    </thead>
    <tbody>
    {{#rules}}
        <tr><td scope="row"><a href='/rule/info?id={{id}}' class="btn-sm">{{name}}</a></td>
            <td nowrap>{{type}}</td>
            <td style="word-wrap: break-word;font-size:small;padding-left:10px;">{{run}}</td>
        </tr>
    {{/rules}}
    {{^rules}}
        <tr><td colspan='3' style='text-align:center;'>There's no registered rules yet.</td></tr>
    {{/rules}}
    </tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode == 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}