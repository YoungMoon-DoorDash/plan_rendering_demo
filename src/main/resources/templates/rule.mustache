{{> header}}
<script language='javascript' type='text/javascript'>
    function on_search() {
        let query = document.getElementById('search').value
        location.href = '/rule?search=' + query
    }
</script>
{{> bodyheader}}
{{{banner}}}
{{{html-title-line}}}

<table class="table table-striped table-bordered" style="width:100%;">
    <tbody>
    {{#rules}}
        <tr><td><a href='/rule/info?id={{id}}' class="btn-sm">{{name}}</a>
            <pre style="font-size:small;padding-left:10px;">{{run}}</pre>
        </td></tr>
    {{/rules}}
    {{^rules}}
        <tr><td style='text-align:center;'>There's no registered rules yet.</td></tr>
    {{/rules}}
    </tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode == 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}