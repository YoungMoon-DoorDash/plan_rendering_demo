{{> header}}
<script language='javascript' type='text/javascript'>
    function on_search() {
        let query = document.getElementById('search').value
        location.href = '/text?search=' + query
    }
</script>
{{> bodyheader}}
{{{banner}}}

<table style='margin-top:10px;width:860px;'>
    <tr>
        <td nowrap><b>{{title}}</b></td>
        <td style='padding-left:16px;text-align:right;' nowrap>
            <input type='text' id='search' value="{{search}}" size='70' placeholder='Search by name'/>
            <button type='button' class='btn btn-outline-primary btn-sm' onclick='on_search()'>Find</button>
            <a href='/text/add' class='btn btn-outline-primary btn-sm'>Add text</a>
            <a href='/text/import' class='btn btn-outline-primary btn-sm'>Import</a>
        </td>
    </tr>
</table>

<table class="table table-striped table-bordered">
    <tbody>
    {{#texts}}
        <tr><td><a href='/text/info?id={{id}}' class="btn-sm">{{name}}</a>
            <div style="word-wrap: break-word;font-size:small;padding-left:10px;width:850px;">{{value}}</div></td></tr>
    {{/texts}}
    {{^texts}}
        <tr><td style='text-align:center;'>There's no registered texts.</td></tr>
    {{/texts}}
    </tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode == 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}