{{> header}}
{{> bodyheader}}

{{{banner}}}

<p style='margin-top:10px;font-weight:bold;'>{{title}}</p>

{{#user}}
<form style="width:640px;margin-top:10px;" class="text-start" action="/user/edit" method="post">
    <input type='hidden' name='id' value='{{id}}' />
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required value="{{name}}" />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" required value="{{email}}" />
    </div>
    <div class="form-group">
        <label for="experiments">Experiments:</label>
        <textarea type="input" class="form-control" id="experiments" name="experiments" rows="5"
          placeholder="add experiment mappings with exp_name:control pair with comma separated."
        >{{experiments}}</textarea>
    </div>
    <div class="alert alert-info d-flex" style="margin-top:10px;padding-bottom:0px;margin-bottom:0px;">
        <i class="bi-info-circle-fill"></i><div class="mx-2">Supported Experiments:
        <ul style="margin-left:16px;">
            {{{experimentList}}}
        </ul></div>
    </div>
    <br>
    <center>
        <input type="submit" class='btn btn-outline-primary btn-sm' value="Update">
        <a type="button" class='btn btn-outline-primary btn-sm' href="/user">Cancel</a>
    </center>
</form>
{{/user}}

<script>
    document.getElementById('name').focus()
</script>
{{> footer}}