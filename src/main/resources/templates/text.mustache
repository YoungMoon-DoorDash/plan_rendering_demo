{{> header}}
<script language='javascript' type='text/javascript'>
    function on_search() {
        let query = document.getElementById('search').value
        location.href = '/text?search=' + query
    }
</script>
{{> bodyheader}}
{{{banner}}}
{{{html-title-line}}}

<table class="table table-striped table-bordered" style="width:100%;">
    <tbody>
    {{#texts}}
        <tr><td><a href='/text/info?id={{id}}' class="btn-sm">{{name}}</a>
            <div style="word-wrap:break-word;font-size:small;padding-left:10px;width:860px;">{{value}}</div></td></tr>
    {{/texts}}
    {{^texts}}
        <tr><td style='text-align:center;'>There's no registered texts.</td></tr>
    {{/texts}}
    </tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode == 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
{{> footer}}