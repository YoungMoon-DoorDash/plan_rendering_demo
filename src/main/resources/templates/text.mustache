{{> header}}
<script>
    function on_search() {
        location.href = '/text?search=' + document.getElementById('search').value
    }
</script>
{{> bodyheader}}
{{{banner}}}
{{{html-title-line}}}


<table class="table table-striped table-bordered" style="width:100%;">
<tbody>
{{#texts}}
    <tr><td><a href='/text/info?id={{id}}' class="btn-sm">{{name}}</a>
            <div style="word-wrap:break-word;font-size:small;padding-left:10px;width:860px;">{{value}}</div>
        </td>
    </tr>
{{/texts}}
</tbody>
</table>

<script>
    let inputBox = document.getElementById('search')
    inputBox.addEventListener("keyup", function (event) {
        if (event.keyCode === 13) {
            on_search()
        }
    });
    inputBox.focus();
</script>
